<html lang={{lang}}>
  <head>
    <meta charset='UTF-8' />

    <title>{{title}}</title>

    <style>
      *, *::after, *::before { box-sizing: border-box; padding: 0; margin: 0; }
      html, body { width: 100%; height: 100%; overflow: hidden; word-break:
      break-all; }
    </style>
  </head>

  <body style='width: 100%; height: 100%'>
    <div
      style='
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        padding: 0 10%;
      '
    >
      <div style='font-size: 48px; font-weight: 900; margin-bottom: 24px'>
        {{title}}
      </div>

      <ul style='font-size: 36px;'>
        <li style='margin-bottom: 12px'>{{desc1}}</li>

        <li style='margin-bottom: 12px'>{{desc2}}</li>

        <li style='color: crimson; margin-bottom: 12px'>{{desc3}}</li>

        <div
          style='font-weight: 900; font-size: 64px; color: orangered;letter-spacing: 24px;margin-top: 32px;text-align: center'
        >{{verifyCode}}</div>
      </ul>
    </div>
  </body>
</html>